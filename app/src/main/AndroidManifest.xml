<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allen.sudoku">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Sudoku">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.About"
            android:label="@string/about_title"
            android:theme="@style/Theme.Dialog" />
        <activity
            android:name=".activity.Prefs"
            android:label="@string/settings_title" />
        <activity android:name=".activity.Graphics"></activity>
        <activity
            android:name=".activity.Game"
            android:label="@string/game_title"></activity>
    </application>

</manifest>